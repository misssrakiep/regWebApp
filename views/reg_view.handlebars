<link rel="stylesheet" href="registration_number.css">

<center>
  <a href="/"><button type="button" name="button">Home</button></a>
  <a href="/add"><button type="button" name="button1">Create a new plate</button></a>
<form class="search" action="" method="post">
  <h1>Search registration numbers by city:</h1>
{{#if search}}
  <h2>Showing searches for {{search}}</h2>
  {{/if}}
  <input type="search" name="regSearch" value="" placeholder="Enter a city to search">
  <br>
  <br>
  <input type="submit" class="searchBtn" name="searchBtn" value="Search">
</form>

 {{#if plate}}
   {{#each plate}}
   <ul>
     <div class="plate">
   <li>{{plate}}</li>
 </div>
  </ul>
   {{/each}}
 {{else}}
 <div class="plate">
 No plates available
</div>
{{/if}}

</center>
